<body>


  <div class="container">



    <div class="row">
      <div class="offset-xs-1 col-4" id="header">
        <p>Ville
        <input id="search" class="input-blue" type="text" placeholder="Lyon, Paris,..." name="" value="">
        <button type="button" class="btn btn-warning" class="am-d" id="btn-Enregistrer">Enregistrer</button></p>

      </div>
    </div>

    <div class="row">
    <div class="offset-xs-1 col-12">
      <img src="./images/map.png" height="200px" class="img-fluid" alt="Responsive image">
  </div>
  </div>

  <% for(var i=0; i<cityList.length; i++){ %>

    <div class="row" id="liste">
      <div class="col-3" class="ville"><%=cityList[i].ville%></div>
      <div class="col-1"><img id="picto" src="<%=cityList[i].url%>" alt=""></div>
      <div class="col-1" id="info"><%=cityList[i].etat%></div>
      <div class="col-1"><a id="tam" href="#" class="badge badge-warning"><%=cityList[i].Tmatin%></a></div>
      <div class="col-1"><a id="tpm" href="#" class="badge badge-secondary"><%=cityList[i].Tapmidi%></a></div>
      <div class=" offset-md-3 col-1 text-right"> <a href="/​delete​-city?position=<%=i%>" class="btn" name="button"><img src="./images/delete.svg"></a></div>
    </div>

    <%}%>



  </div>

